{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "types": ["node"],
    "lib": [ "es2019", "dom"],
    //"allowJs": true, // jsコンパイル用
    //"checkJs": true, // js簡易型チェック
    "sourceMap": true,
    "inlineSources": true,
    //"noImplicitAny": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    //型定義ファイルのチェックをスキップする
    //  あるライブラリの型定義がnode_modulesにコピーされて複数存在する場合
    "skipLibCheck": true,

    //型チェック
    //"strictNullChecks": true,
    //"noImplicitAny": true,
    //"noImplicitThis": true,
    //"noImplicitReturns": true, //暗黙的なreturnを禁止する
    //不要なコードチェック
    //"noUnusedLocals": true, //使用していないローカル変数を禁止する
    //"noUnusedParameters": true,
    //出力先
    "outDir": "./",
    "rootDir": "./",
    //"baseUrl": ".",
    //"paths": {
    //  "@/*": ["./*"]
    //}
  },
  //"include": ["./src/**/*"],
  //"exclude": ["node_modules", "./src/client/**/*"]
  "exclude": ["**/node_modules"]
}
